@model Example.Models.IzborGradaViewModel

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Naziv)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Grad)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Adresa)
        </th>
    </tr>

    @foreach (var m in Model.ListaOrdinacija)
    {
        <tr>
            <td>@m.Naziv</td>
            <td>@m.Grad</td>
            <td>@m.Adresa</td>
            <td>@Html.ActionLink("Detalji o ordinaciji", "DetaljiOrdinacijeJavno", new { MaticniBrojFirme = m.MaticniBrojFirme })</td>
        </tr>
    }

</table>

