@model Example.Models.ObjavaViewModel
@{
    ViewBag.Title = "Prikaz objave";
}

<h2>Detalji objave</h2>
<div id="prikazobjave">
<div class="zaglavljeObjave objavaStil">
    <b>@(Model.Objavio.Ime + " " + Model.Objavio.Prezime)</b>  @(Model.DatumVreme.ToString()) #ID objave: @(Model.IDObjave)<br/>
    @(Model.Tekst)
</div>

<div class="komentariNaObjavu komentariStil">
    @foreach (var m in Model.KomentariNaObjavu)
    {
        @(m.DatumVreme.ToString()) @:  #ID komentara: @(m.IDKomentara)
        <div class="tekstKomentara">
            @(m.Tekst)
        </div><hr/>
    }
</div>
<div class="linkic">
    @Html.ActionLink("Dodaj komentar na ovu objavu", "DodajKomentar", new { IDObjave = Model.IDObjave }) <br/>
    @Html.ActionLink("Vrati se na listu objava","SveObjave","Objava")
</div>

</div>


