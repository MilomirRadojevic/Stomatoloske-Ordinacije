@model Example.Models.SveObjaveViewModel

@{
    ViewBag.Title = "Sve objave";
}

<h2>Sve objave</h2>

<ul class="sveobjave" style="margin-top:40px;">

    @foreach (var m in Model.ListaObjava)
    {
        <li>
            <b>@(m.Objavio.Ime + " " + m.Objavio.Prezime)</b> ( @(m.DatumVreme.ToString()) ) <i>@(m.Tekst) ...</i> @Html.ActionLink("Prikaži objavu", "PrikaziObjavu", new { IDObjave = m.IDObjave })
        </li>
    }

</ul>

@Html.ActionLink("Dodaj novu objavu", "NovaObjava", "Objava", new { @class = "sveobjave"})