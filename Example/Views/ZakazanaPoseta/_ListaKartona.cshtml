
@model Example.Models.KartonViewModel

<table class="table" style="font-size:15px; margin-top:20px;">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Ime)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Prezime)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.JMBG)
        </th>


    </tr>

    @foreach (var m in Model.ListaKartona)
    {
        <tr>
            <td>@m.Ime</td>
            <td>@m.Prezime</td>
            <td>@m.JMBG</td>


            <td>
                @Html.ActionLink("Zakaži posetu", "PacijentSaKartonom", new { IDKartona = m.IDKartona })
            </td>
        </tr>
    }

</table>
